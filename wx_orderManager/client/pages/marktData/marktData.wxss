/* pages/marktData/marktData.wxss */

.tab_menu{
    width: 100%;
    height: 80rpx;
   background: #323a45;
   display: flex;
  
  }
  .tab_menu view{
    flex: 1;
    text-align: center;
  }
  .tab_menu view.active{
    background: #ebeced;
    border-radius: 10rpx 10rpx 0 0;
  }
  .tab_menu view.active text{
    color: #ff5d42;
  }
  .tab_menu view text{
    font-size: 28rpx;
    line-height: 80rpx;
      color: #ffffff;
  }
  swiper{
    height: 2000rpx;
  }

  .t-title{

    font-size: 26rpx;
    color: #666666;
    text-align: center;
    margin-top: 41rpx;
    display: block;
  }
  .t-type{
    font-size: 34rpx;
    color: #333333;
    text-align: center;
    margin-top: 36rpx;
    display: block;
  }
  .t-text{
    font-size: 44rpx;
    color: #ff5d42;
    text-align: center;
    margin-top: 36rpx;  
    display: block;
  }
  .c-con{
    height: 87rpx;
    width: 100%;
    background-color: #f5f5f5;
    border-radius: 5px;
    line-height: 87rpx;
    display: flex;
    justify-content: space-between;
  }

  .c-con .left{
    font-size: 28rpx;
    color: #333333;
  }
  .c-con .right{
      font-size: 28rpx;
      color: #333333;
      display: flex;
      justify-content: center;
      align-items: center;
  }



  .o-center {
    height: auto;
    font-size: 24rpx;
    display: flex;
  }
  
   .o-center .left {
    width: 166rpx;
  }
  
   .o-center .left .tab {
    height: 108rpx;
    width: 166rpx;
    color: #333;
    text-align: center;
    line-height: 108rpx;
    font-size: 26rpx;
    background-color: #f5f5f9;
    border-top: 1rpx solid;
    border-color: #ddd;
    display: block;
  }
  
   .o-center .left .tab:first-of-type {
    border-top: none;
  }
  
   .o-center .left .active {
    color: #ff6b12;
    background-color: #fff;
    font-size: 30rpx;
  }
  
   .o-center .right .scr {
    height: 100%;
  }
  
   .o-center .right .right_tab {
    margin-left: 20rpx;
    position: relative;
  }
  
   .o-center .right  .des_type {
    color: #666;
    font-size: 24rpx;
    line-height: 60rpx;
  }
  
   .o-center .right  .des {
    padding-bottom: 50rpx;
    font-size: 24rpx;
    color: #fff;
    display: flex;
    justify-content: space-between;
    align-content: center;
    position: relative;
  }
  
   .o-center .right  .des .img_con {
    width: 150rpx;
    height: 150rpx;
    border-radius: 5rpx;
    /* flex: 1; */
  }
  
   .o-center .right  .des .text_con {
    font-size: 24rpx;
    height: auto;
    flex: 2.4;
  }
  
   .o-center .right .des .text_con .text {
    display: block;
    line-height: 40rpx;
    margin-left: 20rpx;
  }
  
   .o-center .right  .des .text_con .name {
    font-size: 28rpx;
    color: #333;
  }
  
   .o-center .right .des .text_con .desc {
    font-size: 24rpx;
    color: #888;
    width: 365rpx;
    height: 83rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
  }
  

  
  .manager{
    width: 100%;
    height: 100rpx;
    background-color: #fff;
    border-bottom: 20rpx solid #f5f5f9;
  }
  .btn{
    margin-top: 28rpx;
    margin-right: 30rpx;
    float: right;
    text-align: center;
    line-height: 50rpx;
    background: #169bd5;
    width: 200rpx;
    font-size: 26rpx;
    letter-spacing: 5rpx;
    color:#fff;
  }
  
  .footer{
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: 0;
    display: flex;
  }
  .all{
    flex: 1;
    line-height: 100rpx;
    font-size: 30rpx;
    background-color: #169bd5;
    letter-spacing: 5rpx;
    text-align: center;
  }
  .del{
    flex: 1;
    line-height: 100rpx;
    font-size: 30rpx;
    background-color: #ff5d42;
    letter-spacing: 5rpx;
    text-align: center;
  }
  .add-footer{
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: 0;
    line-height: 100rpx;
    background: #169bd5;
    text-align: center;
    color:#fff;
    font-size: 30rpx;
  }
  
 

