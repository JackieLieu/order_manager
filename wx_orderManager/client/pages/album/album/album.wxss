}

.weui-grid__label{
  margin-top: 20rpx;
}
.weui-grids{
  border: none;
}
.add_btn,.edt_btn{
  width: 70%;
  height: 98rpx;
	background:#fe5d41;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 34rpx;
  /* position: fixed;
  bottom: 0; */
}
.add_btn image{
 width: 40rpx;
	height: 40rpx;
  margin-right: 22rpx;
}
.add-con{
  width: 100%;
  position: fixed;
  display: flex;
  height: 98rpx;
  align-items: center;
  justify-content: space-between;
  bottom: 0;
}
.go_btn{
  width: 30%;
  height: 98rpx;
	background:#169bd5;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 34rpx;
}

.edt_btn{
  width: 100%;
  position: fixed;
  bottom: 0;
  right: 0;
}

.edt_btn button{
  flex: 1;
  height: 100%;
  border-radius: 0;
  color: #fff;
  font-size: 34rpx;
  background: #169bd5;
  border: none;
}
.edt_btn button:last-of-type{
  background: #fe5d41;
}
.empty_select{
  width: 40rpx;
