}
.page__bd{
   background: #fff;
   padding-bottom: 20rpx;
}
.page__hd button{
  width: 190rpx;
	height: 48rpx;
  margin-top: 26rpx;
  margin-right:18rpx;
	line-height: 48rpx;
	background:#169bd5;
  font-size: 28rpx;
	color: #ffffff;
  border: none;
