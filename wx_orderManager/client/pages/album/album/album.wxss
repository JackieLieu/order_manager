}

.weui-grid{
  /* width: 28%; */
  border: none;
  padding-bottom:0;
} 
.weui-grid__icon{
  width: 212rpx;
  height: 212rpx;
  border-radius: 5rpx;
}
.weui-grid_active{
  background: none;
  position: relative;
}
.page__hd{
   height: 100rpx;
   text-align: right;
   margin-bottom: 20rpx;
   background: #fff;
   /* display: flex;
