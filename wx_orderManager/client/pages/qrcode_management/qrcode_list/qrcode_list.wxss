page{
  background: #f5f5f5;
}
.qr_part{
  width: 100%;
  background: #fff;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin: 20rpx 0;
}
.img_con {
  width: 299rpx;
  height: 210rpx;
  position: relative;
}
.img_con image{
  position: absolute;
}
.img_con image:first-of-type{
  width: 100%;
	height:100%;
  top: 0;
}
.img_con image:last-of-type{
  width: 220rpx;
  height: 220rpx;
  top: 0rpx;
  /* right: 0rpx; */
}
.qr_right{
  width: 300rpx;
  margin-left: 40rpx;
}
.qr_right .qr_tit{
  font-size: 30rpx;
	color: #333333;
}
.qr_right text{
  font-size: 28rpx;
  display: block;
	color: #666666;
  margin: 30rpx 0;
}
.qr_right .btn_con{
  display: flex;
  justify-content: space-between;
}
.qr_right .btn_con button{
  width: 140rpx;
	height: 48rpx;
	line-height: 48rpx;
	background:#169bd5;
  color: #fff;
  font-size: 28rpx;
  border: none;
}
.qr_right .btn_con button:last-of-type{
  background: #ff6b12;
}
.add_btn{
  width: 70%;
  height: 98rpx;
	background:#fe5d41;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 34rpx;
  /* position: fixed;
  bottom: 0; */
}
.add_btn image{
 width: 40rpx;
	height: 40rpx;
  margin-right: 22rpx;
}

.add-con{
  width: 100%;
  position: fixed;
  display: flex;
  height: 98rpx;
  align-items: center;
  justify-content: space-between;
  bottom: 0;
}
.go_btn{
  width: 30%;
  height: 98rpx;
	background:#169bd5;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 34rpx;
}