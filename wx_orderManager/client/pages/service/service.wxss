page {
  background: #f5f5f5;
  width: 100%;
  height: 100%;
}

.container {
  width: 92%;
  height: 92%;
  margin: 30rpx auto;
  background: #fff;
  padding: 60rpx 0 140rpx;
  box-sizing: border-box;
  text-align: center;
}

.container view {
  font-size: 30rpx;
  color: #ff2b4d;
}

.container image {
  width: 470rpx;
  height: 462rpx;
  margin: 50rpx;
}
.container image:first-of-type{
  width: 398rpx;
	height: 144rpx;
}
.container text{
  font-size: 26rpx;
	color: #666666;
  text-align: center;
}
button.btn{
	width: 336rpx;
	height: 90rpx;
  margin: 50rpx auto;
  margin-bottom: 450rpx;
  background: #169bd5;
  color: #fff;
}
.btn image{
  width: 30rpx !important;
	height: 30rpx !important;
  margin: 0 auto;
}