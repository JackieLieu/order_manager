}
.input_info{
  width: 92%;
  height: 88rpx;
  margin: 20rpx auto;
  /* border-bottom: 1rpx solid #ddd; */
  display: flex;
  align-items: center;
  justify-content: flex-start;
  background: #fff;
}
.input_info text{
  display: block;
  width: 14rpx;
	height: 36rpx;
  font-size: 30rpx;
	color: #ff2b4d;
}
.input_info span{
  display: block;
  width:125rpx;
  font-size: 30rpx;
  margin-left: 22rpx;
  margin-right: 22rpx;
	color: #999999;
}
.input_info view{
  width:250rpx;
  margin-right:80rpx;
