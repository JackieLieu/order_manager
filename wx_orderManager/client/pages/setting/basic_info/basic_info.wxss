  display: flex;
  justify-content: flex-start;
}
.input_info .open_time picker{
  width: 10%;
}
.input_info .open_time picker .picker{
  width: 100%;
}
.input_info view text{
  display: inline-block;
  font-size: 30rpx;
	color: #333333;
  margin: 0 50rpx;
  }
.input_info image{
  width: 15rpx;
	height: 28rpx;
  /* float: right; */
}
.input_info .select_address{
  width: 100%;
  position: relative;
  z-index: 100;
}
.address{
  flex-wrap: wrap;
  padding-top: 20rpx;
}
.address input{
  width: 96%;
  margin-top:17rpx;
}

.tel_info{
  height: auto;
  align-items: center;
  border: none;
  line-height: 110rpx;
}
