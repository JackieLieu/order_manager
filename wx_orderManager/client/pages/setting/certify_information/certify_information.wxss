  align-items: center;
  justify-content: space-between;
  flex-wrap: nowrap;
}
.img_right{
  width: 259rpx;
  display: flex;
  flex-direction: column;
  text-align: left;
}
.img_con .imgs image{
  width: 100rpx;
	height: 100rpx;
}
.img_con .imgs image:first-of-type{
  border: 1rpx solid #ddd;
  padding: 10rpx;
  box-sizing: border-box;
}
.img_con text{
  display: block;
  width: 100%;
  font-size: 28rpx;
	color: #666;
  text-align: left;
}
.img_con view{
  font-size: 24rpx;
	color: #666666;
 
}
.img_con button{
  width: 160rpx;
	height: 48rpx;
