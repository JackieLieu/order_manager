.certificate_con{
 width: 92%;
 margin: 0 auto;
 display: flex;
 justify-content: space-between;

}
.certificate_con span{
  font-size: 30rpx;
	color: #333333;
}

.certificate_con .certificate_main{
  width: 100%;
  
}
.certificate_con .certi_tit{
  width: 139rpx;
