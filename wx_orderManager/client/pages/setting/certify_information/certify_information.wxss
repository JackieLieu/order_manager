  font-size: 28rpx;
	color: #999999;
  padding: 30rpx;
}
.cer_part{
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
}
.img_con{
  width:462rpx;
  padding: 30rpx 0;
  /* border-bottom:1rpx solid #ddd; */
