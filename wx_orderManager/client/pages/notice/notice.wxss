.title{
  font-size: 38rpx;
  color: #333;
  margin: 57rpx;
}

.review_text {
  width: 92%;
  padding: 10rpx 4% 20rpx;
  background: #fff;
  position: relative;
  height: 225rpx;
  box-shadow: 0 0 5rpx 5rpx #eee;
  border-radius: 5rpx;
}
.review_text textarea {
  width: 92%;
  padding: 20rpx 4%;
  height: 205rpx ;
  font-size: 26rpx;
  color: #999;
}
.review_text text {
  position: absolute;
  right: 6%;
  bottom: 0;
  color: #999;
  font-size: 26rpx;
}
button.btn{
  width: 100%;
