.container {
  width: 100%;
  background: #f5f5f9;
}

.container .header {
  width: 100%;
  height: 156rpx;
  background: #323a45;
  color: #fff;
}

.container .header .head_center {
  width: 82%;
  height: 80rpx;
  margin: 0 auto;
  position: relative;
}

.container .header .head_center input {
  position: absolute;
  border-radius: 80rpx;
  width: 100%;
  height: 100%;
  border: 2rpx solid #555e69;
}

.weui-search-bar__box {
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 80rpx;
  border: 2rpx solid #555e69;
}
.weui-search-bar {
  background: #323a45;
  border: none;
  padding:35rpx 20rpx;

}
.weui-search-bar__input{
  height: 80rpx;
}
.weui-search-bar .weui-search-bar__form{
   border-radius: 80rpx;
   background:#323a45; 
}
.weui-search-bar .weui-search-bar__form .weui-search-bar__label{
    border-radius: 80rpx;
    line-height: 80rpx;
   background: #323a45;
}
.weui-search-bar .weui-search-bar__cancel-btn{
  line-height: 80rpx;
  font-size: 28rpx;
  color: #fff;
}
.order_content{
  width: 100%;
}
.order_content .order_part{
  width: 100%;
  box-sizing: border-box;
  /* display: flex;
  align-items: flex-start; */
  padding: 10rpx  30rpx 38rpx;
  /* justify-content: space-between; */
  margin-bottom: 20rpx;
  background: #fff;
}
.order_title {
  height: 70rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx dashed #ddd;
}
.order_part .order_title span{
  display: inline-block;
  width: 50rpx;
	height: 36rpx;
	line-height: 36rpx;
	background:#169bd5;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  margin-right: 20rpx;
}
.order_part .order_title text{
  color: #169bd5;
  font-size: 28rpx;
}
.order_info_con{
  display: flex;
  padding-left: 70rpx;
  padding-top: 30rpx;
  justify-content: space-between;
}
.order_part .order_info{
 width:70%;
 font-size: 28rpx;
}
.order_part .order_info view{
  font-size: 28rpx;
 
  color: #333333;
  margin-bottom: 30rpx;
}
.order_part .order_info view:last-of-type{
  margin: 0;
}
.order_part .order_info view text{
   color: #999999;
  margin-right: 15rpx;
  display: inline-block;
  width: 120rpx;
}
.status_btn{
  width: 180rpx;
  font-size: 30rpx;
	color: #333333;
}
.order_part .order_info .price_col{
  color: #ff2b4d;
}
.order_part .order_info .tel_col{
  color: #0069df;
}
.order_part .accept_col{
  color: #169bd5;
}
.order_part  .cancle_col{
  color: #ff5d42;
}
.order_part .refuse_col{
  width: 198rpx;
   color: #999999;
}