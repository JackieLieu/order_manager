/* pages/order_management/order_management.wxss */

.container {
  width: 100%;
  background: #f5f5f9;
}

.container .header {
  width: 100%;
  height: 156rpx;
  background: #323a45;
  color: #fff;
}

.container .header .head_center {
  width: 82%;
  height: 80rpx;
  margin: 0 auto;
  position: relative;
}

.container .header .head_center input {
  position: absolute;
  border-radius: 80rpx;
  width: 100%;
  height: 100%;
  border: 2rpx solid #87919f;
}

.weui-search-bar__box {
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 80rpx;
  border: 2rpx solid #87919f;
}

.weui-search-bar {
  background: #323a45;
  border: none;
  padding: 35rpx 20rpx;
}

.weui-search-bar__input {
  height: 80rpx;
}

.weui-search-bar .weui-search-bar__form {
  border-radius: 80rpx;
  background: #323a45;
}

.weui-search-bar .weui-search-bar__form .weui-search-bar__label {
  border-radius: 80rpx;
  line-height: 80rpx;
  background: #323a45;
}

.weui-search-bar .weui-search-bar__cancel-btn {
  line-height: 80rpx;
  font-size: 28rpx;
  color: #fff;
}

.weui-search-bar__text {
  /* color: #fff; */
}

.tab_container {
  width: 100%;
}

.tab_menu {
  width: 100%;
  height: 80rpx;
  background: #323a45;
  display: flex;
}

.tab_menu view {
  flex: 1;
  text-align: center;
}

.tab_menu view.active {
  background: #ebeced;
  border-radius: 10rpx 10rpx 0 0;
}

.tab_menu view.active text {
  color: #ff5d42;
}

.tab_menu view text {
  font-size: 28rpx;
  line-height: 80rpx;
  color: #fff;
}

swiper {
  height: 2000rpx;
}

swiper-item {
  background: #f5f5f9;
}

.empty {
  margin:35vh auto 0;
  transform:translateY(-35%);
  text-align:center;

}

.empty image {
  display: block;
  width:220rpx;
  height: 220rpx;
  margin: 20rpx auto;
}

.empty text {
  text-align: center;
  display: block;
  width: 100%;
  font-size: 26rpx;
  color: #666;
}

.order_part {
  display: flex;
  align-items: flex-start;
  padding: 38rpx 20rpx;
  justify-content: space-between;
  margin-bottom: 20rpx;
  background: #fff;
}

.order_part span {
  display: block;
  width: 50rpx;
  height: 36rpx;
  line-height: 36rpx;
  background: #169bd5;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
}

.order_part .order_info {
  width: 65%;
  font-size: 28rpx;
}

.order_part .order_info view {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 30rpx;
}

.order_part .order_info view:last-of-type {
  margin: 0;
}

.order_part .order_info view text {
  color: #999;
  margin-right: 15rpx;
  display: inline-block;
  width: 120rpx;
}

.status_btn {
  width: 180rpx;
  font-size: 30rpx;
  color: #333;
}

.order_part .order_info .price_col {
  color: #ff2b4d;
}

.order_part .order_info .tel_col {
  color: #0069df;
}

.order_part .accept_col {
  color: #169bd5;
}

.order_part  .cancle_col {
  color: #ff5d42;
}

.order_part .refuse_col {
  width: 198rpx;
  color: #999;
}
