.header {
  /* height: 300rpx; */
  width: 100%;
  background: #323a45;
  color: #fff;
  text-align: center;
  padding-bottom: 10rpx;
}
.header .title {
  width: 100%;
  font-size: 34rpx;
  padding-top: 29rpx;
  margin-bottom: 40rpx;
}
.header .day-con {
  font-size: 30px;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 30rpx 100rpx;
}
.header .day-con .left {
  border-right: 1rpx solid #84898f;
}
.header .day-con .l-numebr {
  font-size: 44rpx;
  height:54rpx;

}
.header .day-con .l-title {
  font-size: 30rpx;
  margin-bottom: 52rpx;
  height:30rpx;
line-height:30rpx;

}
.header .day-con .left {
  flex: 1;
}
.header .day-con .right {
  flex: 1;
}
.notice {
  width: 750rpx;
  height: 80rpx;
  background-color: #ff5d42;
  font-size: 24rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 80rpx;
  letter-spacing: 1rpx;
  color: #ffffff;
  vertical-align: middle;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.notice .icon {
  width: 25px;
  height: 23px;
  /* vertical-align: middle; */
  line-height: 80rpx;
}
.roll {
  width: calc(100% - 45rpx);
  height: 100%;
  position: relative;
  display: inline;
  overflow: hidden;
  /* vertical-align: middle; */
}
.btn-con {
  width: 100%;
  overflow: hidden;
  display: flex;
  flex-wrap: wrap;
  justify-content:flex-start;
  align-items: center;
  font-size: 26rpx;
  color: #666666;
  letter-spacing: 2rpx;
}
.btn-con .btn {
  text-align: center;
  height: 237rpx;
  width: 33.3333%;
  box-sizing: border-box;
}
.btn-con .btn:nth-child(n) {
  border: 1rpx solid #eee;
  border-left: none;
  border-right: none;
  border-bottom: none;
}
.btn-con .btn:nth-child(3n-1) {
  border: 1rpx solid #eee;
  border-bottom: none;
}
.btn-con .btn .img {
  width: 78rpx;
  height: 78rpx;
  margin: 40rpx auto;
  margin-bottom: 25rpx;
}
.rollCon {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 100;
  /* background: #fde8c7; */
  font-size: 20rpx;
  line-height: 60rpx;
}
.box {
  width: 100%;
  position: relative;
  height: 100%;
}
.text {
  white-space: nowrap;
  position: absolute;
  top: 0;
  height: 100%;
  line-height: 80rpx;
  font-size: 26rpx;
	color: #ffffff;
}
.weui-btn-area{
  margin: 0;
}
