/* pages/register/register.wxss */
page{
   background-color: #f5f5f5;
}
.container{
  width: 100%;
  background-color: #f5f5f5;
  padding: 30rpx;
  box-sizing: border-box;
}
.container .register_info{
  width: 100%;
  height: 88rpx;
  border-radius: 5rpx;
  background: #fff;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
	color: #999999;
}
.container .register_info .price{
  width:80%;
  display: flex;
}
.container .register_info .price input{
  width: 90%;
  margin-left: 10rpx;
}
.container .register_info input{
  width:70%;
}
.container .register_info  .section{
  width: 66%;
  height: 100%;
}
.container .register_info  .section .picker{
  width: 90%;
  height: 88rpx;
  line-height: 88rpx;
}
.container .register_info  .section text{
  display: inline-block;
  width: 10%;
}
.container .register_info  .section picker{
  height: 100%;
  /* display: flex;
  justify-content: space-between; */
}
.radio-group{
  width: 80%;
  display: flex
}
.radio-group label{
  flex: 1;
}
.container .intr{
  height: 200rpx;
}
.introduce{
  height: 100%;
}
.info_img{
  width: 100%;
  height: 328rpx;
  background: #fff;
  font-size: 28rpx;
	color: #999999;
  padding: 20rpx 0 0 20rpx;
  box-sizing: border-box;
}
.info_img .upload_pic {
  width: 100%;
  /* border-top: 1rpx dashed #ddd; */
  padding: 40rpx 0;
  display: flex;
}
.info_img .upload_pic .upload_btn {
  width: 162rpx;
  height: 162rpx;
  border: 1rpx solid #dcdcdc;
  border-radius: 5rpx;
  position: relative;
}
.info_img .upload_pic .upload_btn image {
  width: 64rpx;
  height: 52rpx;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}
.info_img .upload_pic .tip_text {
  height: 80rpx;
  margin-left: 15rpx;
  padding: 45rpx 0;
}
.info_img .upload_pic .tip_text text {
  display: block;
  width: 100%;
}
.info_img .upload_pic .tip_text text:first-of-type {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}
.info_img .upload_pic .tip_text text:last-of-type {
  color: #999;
  font-size: 24rpx;
}
.sub_info{
  width: 98%;
  height: 90rpx;
  color: #fff;
  font-size: 34rpx;
  background-color: #fe5d41;
  margin-top: 40rpx;
  }
  .btn{
    width: 100%;
    position: fixed;
    bottom: 50rpx;
    left: 0;
    right:0;
    margin: auto;
  }