/* pages/register/register.wxss */
.container{
  width: 100%;
  background-color: #f5f5f5;
  padding: 30rpx;
  box-sizing: border-box;
}
.container .register_info{
  width: 100%;
  height: 88rpx;
  border-radius: 5rpx;
  background: #fff;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
	color: #999999;
}
.info_img{
  width: 100%;
  height: 328rpx;
  background: #fff;
  font-size: 28rpx;
	color: #999999;
  padding: 20rpx 0 0 20rpx;
  box-sizing: border-box;
}
.info_img .upload_pic {
  width: 100%;
  /* border-top: 1rpx dashed #ddd; */
  padding: 40rpx 0;
  display: flex;
}
.info_img .upload_pic .upload_btn {
  width: 162rpx;
  height: 162rpx;
  border: 1rpx solid #dcdcdc;
  border-radius: 5rpx;
  position: relative;
}
.info_img .upload_pic .upload_btn image {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}
.info_img .upload_pic .tip_text {
  height: 80rpx;
  margin-left: 15rpx;
  padding: 45rpx 0;
}
.info_img .upload_pic .tip_text text {
  display: block;
  width: 100%;
}
.info_img .upload_pic .tip_text text:first-of-type {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}
.info_img .upload_pic .tip_text text:last-of-type {
  color: #999;
  font-size: 24rpx;
}
.register_info input{
  text-align: right;
  padding-right: 20rpx;
}
.sub_info{
  width: 94%;
  height: 90rpx;
  color: #fff;
  font-size: 34rpx;
  background-color: #fe5d41;
  margin-top: 200rpx;
  }
  .address_con{
    width:75%; 
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }