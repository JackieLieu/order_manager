.container {
  width: 100%;
  background: #f5f5f9;
}

.container .header {
  width: 100%;
  height: 156rpx;
  background: #323a45;
  color: #fff;
}

.container .header .head_center {
  width: 82%;
  height: 80rpx;
  margin: 0 auto;
  position: relative;
}

.container .header .head_center input {
  position: absolute;
  border-radius: 80rpx;
  width: 100%;
  height: 100%;
  border: 2rpx solid #555e69;
}

.weui-search-bar__box {
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 80rpx;
  border: 2rpx solid #555e69;
}

.weui-search-bar {
  background: #323a45;
  border: none;
  padding: 35rpx 20rpx;
}

.weui-search-bar__input {
  height: 80rpx;
}

.weui-search-bar .weui-search-bar__form {
  border-radius: 80rpx;
  background: #323a45;
}

.weui-search-bar .weui-search-bar__form .weui-search-bar__label {
  border-radius: 80rpx;
  line-height: 80rpx;
  background: #323a45;
}

.weui-search-bar .weui-search-bar__cancel-btn {
  line-height: 80rpx;
  font-size: 28rpx;
  color: #fff;
}

.tab_container {
  width: 100%;
}

.tab_menu {
  width: 100%;
  height: 80rpx;
  background: #323a45;
  display: flex;
}

.tab_menu view {
  flex: 1;
  text-align: center;
}

.tab_menu view.active {
  background: #ebeced;
  border-radius: 10rpx 10rpx 0 0;
}

.tab_menu view.active text {
  color: #ff5d42;
}

.tab_menu view text {
  font-size: 28rpx;
  line-height: 80rpx;
  color: #fff;
}

